<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Travelshalk &copy;  </h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter username" type="text" class="form-control" id="username" required>
                <div class="valid-feedback">Looks good !</div>
            </div>
            <!-- //email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" placeholder="Enter your email" type="email" class="form-control" id="email" required>
            </div>
            <!-- password -->
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" placeholder="Enter your password" type="password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
        </div>
        </div>
