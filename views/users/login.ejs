<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Encrypted &copy;  </h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter username" type="text" class="form-control" id="username" required>
                
            </div>
            
            <!-- password -->
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" placeholder="Enter your password" type="password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
        </div>
        </div>